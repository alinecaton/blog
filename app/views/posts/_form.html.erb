<%= form_for @post do |f| %>
  <%= f.label 'User' %>
  <br>
  <%= f.select :user_id, User.all.map { |user| [user.name, user.id] }, prompt: true %>
  <br>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content, rows: 5, cols: 30 %>
  <br>
  <%= f.submit %>
  <%= link_to 'Back' , root_path %>
<% end %>