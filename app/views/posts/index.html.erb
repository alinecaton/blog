

<h1>Posts</h1>

<% @posts.each do |post| %>
  <h3><%= link_to post.title, post %></h3>
  <p><%= post.content %></p>
  <p><%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?'}  %></p>
<% end %>

<%= link_to 'New post', new_post_path %>